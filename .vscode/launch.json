{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug example",
      "preLaunchTask": "typescript",
      "program": "${workspaceFolder}/example/src/index.ts",
      "outFiles": ["${workspaceFolder}/example/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "example gql",
      "protocol": "inspector",
      "cwd":"${workspaceRoot}/examples-gql",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "args": [
        "${workspaceRoot}/packages/nexus-prisma-generate/src/index.ts",
        "--schema",
        "src/generated/schema.graphql",
        "--output",
        "temp"
      ],
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "example",
      "protocol": "inspector",
      "cwd":"${workspaceRoot}/examples",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "args": [
        "${workspaceRoot}/packages/nexus-prisma-generate/src/index.ts",
        "--output",
        "temp"
      ],
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "[Not Working] Debug with ts-node-dev",
      "protocol": "inspector",
      // "cwd":"${workspaceRoot}/examples",
      "cwd":"${workspaceRoot}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
      "sourceMaps": true,
      "args": [
        // "--inspect",
        // "--no-notify",
        // "--respawn",
        "--transpileOnly",
        "${workspaceRoot}/packages/nexus-prisma-generate/src/index.ts"
      ],
      "restart": true
    }
  ]
}
