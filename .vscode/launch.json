{
  "version": "0.2.0",
  "configurations": [
    // {
    //   "type": "node",
    //   "request": "launch",
    //   "name": "Debug example",
    //   "preLaunchTask": "typescript",
    //   "program": "${workspaceFolder}/example/src/index.ts",
    //   "outFiles": ["${workspaceFolder}/example/dist/**/*.js"]
    // },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug example",
      "protocol": "inspector",
      "cwd":"${workspaceRoot}/packages/example",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "args": [
        "${workspaceRoot}/packages/example/src/index.ts"
      ],
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug oas3-preprocess.ts",
      "protocol": "inspector",
      "cwd":"${workspaceRoot}/packages/example",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "args": [
        "${workspaceRoot}/packages/example/tools/oas3-preprocess.ts",
        "-i",
        "tools/oas3-samples/loopback-example-relation.json",
        "-o",
        "src/openapi.json"
      ],
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "example gql",
      "protocol": "inspector",
      "cwd":"${workspaceRoot}/packages/example",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "args": [
        "${workspaceRoot}/packages/nexus-graphql-generate/src/index.ts",
        "--schema",
        "src/generated/graphql/petstore.graphql",
        "--typepath",
        "../types/types",
        "--output",
        "src/generated/nexus-graphql"
      ],
      "restart": true
    },
    // Ref: https://medium.com/@jakubsynowiec/debugging-typescript-jest-unit-tests-with-visual-studio-code-36cd16865bb0
    // Ref: https://patrickdesjardins.com/blog/debug-typescript-unit-test-with-jest-and-vscode
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
      "cwd": "${workspaceRoot}/packages/nexus-graphql",
      "args": [
        "--runInBand"
      ],
      "runtimeArgs": [
        "--nolazy"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
